<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.calpoly.aagrover.goal.StartNewGoalActivity"
    android:background="@color/colorCharcoal">

    <EditText
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/etTypeGoal"
        android:hint="type your goal"
        android:textColorHint="@color/colorCharcoal"
        android:typeface="monospace"
        android:textStyle="italic"
        android:textSize="12sp"
        android:background="@drawable/get_goal"
        android:gravity="center"
        android:layout_below="@+id/guideStart"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etTypeDate"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:hint="mm/dd/yyyy"
        android:textColorHint="@color/colorCharcoal"
        android:typeface="monospace"
        android:textStyle="italic"
        android:textSize="12sp"
        android:background="@drawable/get_goal"
        android:gravity="center"
        android:layout_below="@+id/etTypeGoal"
        android:layout_alignLeft="@+id/etTypeGoal"
        android:layout_alignStart="@+id/etTypeGoal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Goal"
        android:id="@+id/bSetGoal"
        android:background="@color/colorLightBlue"
        android:typeface="monospace"
        android:textColor="@color/colorCharcoal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/guideStart"
        android:layout_alignEnd="@+id/guideStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill out the goal you want to achieve and when you'll conquer it."
        android:id="@+id/guideStart"
        android:typeface="monospace"
        android:textSize="12sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
