<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/colorCharcoal" >

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="New Text"
        android:id="@+id/tvGoal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textSize="20sp"
        android:typeface="monospace"
        android:background="@drawable/the_waves"
        android:textColor="@color/colorCharcoal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="New Text"
        android:id="@+id/tvDate"
        android:gravity="center"
        android:textSize="15sp"
        android:typeface="monospace"
        android:background="#81C784"
        android:textColor="@color/colorCharcoal"
        android:layout_below="@+id/tvGoal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"/>

    <edu.calpoly.aagrover.goal.ProgressWheel
        android:id="@+id/progressBarTwo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        ProgressWheel:textColor="#81C784"
        ProgressWheel:textSize="18sp"
        ProgressWheel:rimColor="#44000000"
        ProgressWheel:pwBarLength="60dp"
        ProgressWheel:barColor="#81C784"
        ProgressWheel:barWidth="10dp"
        ProgressWheel:rimWidth="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:text="New Text"
        android:id="@+id/tvDays"
        android:background="@color/colorLightBlue"
        android:textColor="@color/colorCharcoal"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_below="@+id/tvDate"
        android:layout_toLeftOf="@+id/tvHours"
        android:layout_toStartOf="@+id/tvHours"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:typeface="monospace"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:text="New Text"
        android:id="@+id/tvHours"
        android:background="@color/colorLightBlue"
        android:textColor="@color/colorCharcoal"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_alignTop="@+id/tvDays"
        android:layout_alignLeft="@+id/progressBarTwo"
        android:layout_alignStart="@+id/progressBarTwo"
        android:typeface="monospace"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:text="New Text"
        android:id="@+id/tvMin"
        android:background="@color/colorLightBlue"
        android:textColor="@color/colorCharcoal"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_alignTop="@+id/tvHours"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout"
        android:typeface="monospace"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:text="New Text"
        android:id="@+id/tvSec"
        android:background="@color/colorLightBlue"
        android:textColor="@color/colorCharcoal"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_alignTop="@+id/tvMin"
        android:layout_toRightOf="@+id/progressBarTwo"
        android:layout_toEndOf="@+id/progressBarTwo"
        android:typeface="monospace"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="DAYS"
        android:id="@+id/textView5"
        android:layout_below="@+id/tvDays"
        android:layout_alignLeft="@+id/tvDays"
        android:layout_alignStart="@+id/tvDays"
        android:gravity="center"
        android:background="@color/colorLightBlue"
        android:textColor="@color/colorCharcoal"
        android:textSize="15sp"
        android:typeface="monospace"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="HOURS"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/tvDays"
        android:layout_toEndOf="@+id/tvDays"
        android:gravity="center"
        android:background="@color/colorLightBlue"
        android:textColor="@color/colorCharcoal"
        android:textSize="15sp"
        android:typeface="monospace"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="MIN"
        android:id="@+id/textView7"
        android:layout_below="@+id/tvMin"
        android:layout_alignLeft="@+id/tvMin"
        android:layout_alignStart="@+id/tvMin"
        android:gravity="center"
        android:background="@color/colorLightBlue"
        android:textColor="@color/colorCharcoal"
        android:textSize="15sp"
        android:typeface="monospace"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="SEC"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignLeft="@+id/tvSec"
        android:layout_alignStart="@+id/tvSec"
        android:gravity="center"
        android:background="@color/colorLightBlue"
        android:textColor="@color/colorCharcoal"
        android:textSize="15sp"
        android:typeface="monospace"
        android:layout_marginBottom="7dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Did you make progress today? "
        android:id="@+id/tvProgress"
        android:typeface="monospace"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_above="@+id/progressBarTwo"
        android:layout_toLeftOf="@+id/thumbsUpButton"
        android:layout_toRightOf="@+id/ratingRadioGroup"
        android:layout_toEndOf="@+id/ratingRadioGroup" />

    <RadioGroup
        android:id="@+id/ratingRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

    </RadioGroup>

    <RadioButton
        android:id="@+id/thumbsDownButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_alignTop="@+id/thumbsUpButton"
        android:layout_toRightOf="@+id/thumbsUpButton"
        android:layout_toEndOf="@+id/thumbsUpButton"
        android:layout_marginLeft="5dp"/>

    <RadioButton
        android:id="@+id/thumbsUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_above="@+id/progressBarTwo"
        android:layout_toRightOf="@+id/progressBarTwo"
        android:layout_toEndOf="@+id/progressBarTwo" />

</RelativeLayout>